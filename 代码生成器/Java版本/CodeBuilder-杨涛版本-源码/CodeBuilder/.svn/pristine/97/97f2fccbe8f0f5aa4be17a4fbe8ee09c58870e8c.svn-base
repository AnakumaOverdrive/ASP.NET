using System;
namespace Esint.CodeBuilder.InterFace
{
    public interface IControlProperty
    {
        /// <summary>
        /// 控件名
        /// </summary>
        string ControlName { get; }

        /// <summary>
        /// 控件类型
        /// </summary>
        string ControlType { get; set; }

        /// <summary>
        /// 控件值字符串,文本框为.Text 
        /// </summary>
        string ControlValueStr { get; }

        /// <summary>
        /// 是否允许为空
        /// </summary>
        bool IsEnabledNull { get; set; }

        /// <summary>
        /// 是否显示
        /// </summary>
        bool IsVisible { get; set; }

        /// <summary>
        /// 其它说明
        /// </summary>
        string Tag { get; set; }
    }
}
